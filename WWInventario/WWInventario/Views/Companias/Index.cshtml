@model IEnumerable<Compania>

@{
	ViewBag.Title = "Lista de Compañias";
}

<h1>Compa&ntilde;ias</h1>

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(model => model.LogoPath)</th>
					<th>@Html.DisplayNameFor(model => model.Nombre)</th>
					<th>@Html.DisplayNameFor(model => model.Pais)</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(d => item.LogoPath)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(d => item.Nombre)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(d => item.Pais)
						</td>
						<td class="align-middle">
							<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"> </i>Editar</a>|
							<a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"> <i class="bi bi-eye"> </i>Detalles </a>|
							<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash"> </i>Eliminar</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

@await Html.PartialAsync("_CreateItem", "Companias")