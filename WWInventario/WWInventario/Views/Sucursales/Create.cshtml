@using WWInventario.Data.ViewModels
@model NewSucursalVM

@{
	ViewBag.Title = "Crear nueva sucursal";
}


<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8 offset-2">
			<p>
				<h4>
					Crear nueva sucursal
				</h4>
			</p>

			<div class="row">
				<div class="col-md-8 offset-2">
					<form asp-action="Create">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label asp-for="Nombre" class="control-label"></label>
									<input asp-for="Nombre" class="form-control" />
									<span asp-validation-for="Nombre" class="text-danger"></span>
								</div>

								<div class="form-group">
									<label asp-for="Direccion" class="control-label"></label>
									<input asp-for="Direccion" class="form-control" />
									<span asp-validation-for="Direccion" class="text-danger"></span>
								</div>

								<div class="form-group">
									<label asp-for="CompaniaId" class="control-label"></label>
									<select asp-for="CompaniaId" class="form-control" asp-items="ViewBag.Companias"></select>
									<span asp-validation-for="CompaniaId" class="text-danger"></span>
								</div>


								<div class="form-group mt-1">
									<input type="submit" value="Crear" class="btn btn-outline-success float-end" />
									<a class="btn btn-outline-secondary" asp-action="Index">VER TODOS</a>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>

		</div>
	</div>
</div>