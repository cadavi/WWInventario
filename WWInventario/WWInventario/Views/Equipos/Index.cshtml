@model IEnumerable<Equipo>

@{
    ViewBag.Title = "Lista de Equipos";
}

<h1>Equipos</h1>

<div class="row">
    <div class="row row-cols-1 row-cols-md-4 g-3">
        @foreach (var equipo in Model)
        {
               <partial name="_EquipoCard" model="equipo"/>
        }
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Equipos")