@model Dispositivo

@{
	ViewBag.Title = "Eliminar el dispositivo";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1> Eliminar @Model.Tipo</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<div class="form-group">
					<label asp-for="Tipo" class="control-label"></label>
					<input asp-for="Tipo" class="form-control" readonly />
				</div>
				<br />
				<div class="form-group">
					<form asp-action="Delete">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<input type="hidden" asp-for="Id" />
						<input type="submit" value="Confirmar" class="btn btn-danger float-right" />
						<a class="btn btn-outline-secondary" asp-action="Index">MOSTRAR TODOS</a>
						<br/>
						<span asp-validation-for="Tipo" class="text-danger"></span>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>